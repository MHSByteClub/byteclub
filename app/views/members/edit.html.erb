<body>
    <div class="container">
        <h3>Update Member Account</h3>
        <%=form_for @member, url: member_path(@member) do |f|%>
            <div class="form-row">
                
                <%=f.hidden_field :_method, value: "PATCH" %>
                <div class="form-group">
                    <%=f.label :username%>
                    <%=f.text_field :username, placeholder: "username"%>
                </div>
                <div class="form-group">
                    <%=f.label :grad_year%>
                    <%=f.text_field :grad_year, placeholder: "graduation year"%>
                </div>
                
                
            </div>
            
            <%=f.submit "Update Member", class: 'btn btn-green'%>
            <a href="<%=member_path(@member)%>" class="btn btn-danger">Cancel</a>
        <%end%>
    </div>
</body>