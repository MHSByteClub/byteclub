<body>
    <div class="container">
        <h3>Create a New Member Account</h3>
        <%=form_for @member, url: members_path do |f|%>
            <div class="form-row">
                <%=f.text_field :username, placeholder: "username"%>
                <%=f.text_field :email, placeholder: "email"%>
                <%=f.password_field :password, placeholder: "password"%>
            </div>
            <div class="form-row">
                <%=f.text_field :github_username, placeholder: "github username"%>
                <%=f.number_field :grad_year, placeholder: 'graduation year'%>
            </div>
            <%=f.submit "create member", class: 'btn btn-green'%>
            <a href="<%=root_path%>" class="btn btn-danger">Cancel</a>
        <%end%>
    </div>
</body>